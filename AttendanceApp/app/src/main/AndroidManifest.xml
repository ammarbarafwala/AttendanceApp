<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jkva.android.attendanceapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AttendanceApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddPersonGroupActivity"></activity>
        <activity android:name=".PersonGroupActivity"></activity>
        <activity
            android:name=".AddPersonActivity"
            android:label="@string/title_activity_add_person"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AddFaceToPersonActivity"
            android:label="@string/title_activity_add_person"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PersonListActivity"
            android:label="@string/title_activity_list_person"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SelectImageActivity"
            android:label="@string/title_activity_list_person"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PersonActivity"
            android:label="@string/title_activity_list_person"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".IdentificationActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".HistoryActivity"></activity>
    </application>

</manifest>